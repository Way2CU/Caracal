	<div class="main_menu">
		<cms:var name="$params['link_new']"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 500px;">
				<cms:text constant="column_question" module="faq"/>
