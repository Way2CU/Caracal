<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="shop_delivery_price_add_form">
		<label>
			<input type="hidden" name="method" value="$params['method']" cms:eval="value"/>
			<span><cms:text constant="label_value" module="shop"/></span>
			<input type="text" name="value" style="width: 270px;" maxlength="50"/>
		</label>
		<div/>
		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
