<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="contact_form_field_values_edit_form">
		<label>
			<span><cms:text constant="label_name" module="contact_form"/></span>
			<input
				type="text"
				name="name"
				class="multi-language"
				style="width: 370px"
				/>
			<cms:language_data param="name"/>
		</label>

		<label>
			<span><cms:text constant="label_regular_value" module="contact_form"/></span>
			<input
				type="text"
				name="value"
				style="width: 370px"
				value="$params['value']"
				cms:eval="value"
				/>
		</label>

		<div class="button_bar">
			<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
			<input type="hidden" name="field" value="$params['field']" cms:eval="value"/>
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>

	<script type="text/javascript">
		new LanguageSelector('contact_form_field_values_edit_form');
	</script>
</document>
