<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<div class="main_menu">
		<cms:var param="link_new"/>
		<cms:var param="link_groups"/>
		<cms:var param="link_overview"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 250px;">
				<cms:text constant="column_text" module="links"/>
			</span>
			<span class="column" style="width: 70px; text-align: center;">
				<cms:text constant="column_external" module="links"/>
			</span>
			<span class="column" style="width: 70px; text-align: center;">
				<cms:text constant="column_sponsored" module="links"/>
			</span>
			<span class="column" style="width: 90px; text-align: center;">
				<cms:text constant="column_total_clicks" module="links"/>
			</span>
			<span class="column">
				<cms:text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 400px">
			<cms:link_list/>
		</div>
	</div>
</document>
