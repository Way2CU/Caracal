<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<nav class="window">
		<cms:var name="$params['link_new']"/>
		<cms:var name="$params['link_groups']"/>
	</nav>

	<!-- Header -->
	<table class="list" data-height="300">
		<thead>
			<tr>
				<td><cms:text constant="column_title" module="news"/></td>
				<td><cms:text constant="column_time" module="news"/></td>
				<td><cms:text constant="column_options"/></td>
			</tr>
		</thead>

		<tbody>
			<cms:news_list show_invisible="1"/>
		</tbody>
	</table>
</document>
