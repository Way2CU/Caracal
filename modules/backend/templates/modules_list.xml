<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="scrollable_list modules">
		<!-- Header -->
		<div class="list_header">
			<span class="column" style="width: 220px;">
				<cms:text constant="column_module_name" module="backend"/>
			</span>
			<span class="column" style="width: 50px; text-align: center;">
				<cms:text constant="column_module_order" module="backend"/>
			</span>
			<span class="column" style="width: 60px; text-align: center;">
				<cms:text constant="column_module_preload" module="backend"/>
			</span>
			<span class="column" style="width: 50px; text-align: center;">
				<cms:text constant="column_module_active" module="backend"/>
			</span>
			<span class="column">
				<cms:text constant="column_options"/>
			</span>
		</div>

		<!-- List -->
		<div class="list_content" style="height: 250px">
			<_module_list/>
		</div>
	</div>
</document>
