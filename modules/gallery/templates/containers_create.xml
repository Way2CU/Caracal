<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="container_create_form">
		<label>
			<span><_text constant="label_text_id" module="gallery"/></span>
			<input type="text" name="text_id" class="code" style="width: 360px;" maxlength="50"/>
		</label>
		<label>
			<span><_text constant="label_name" module="gallery"/></span>
			<input type="text" class="multi-language" name="name" style="width: 360px;" maxlength="50"/>
		</label>
		<label>
			<span><_text constant="label_description" module="gallery"/></span>
			<textarea name="description" class="multi-language" style="width: 360px; height: 150px;"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('container_create_form');
	</script>

</document>
